<Window x:Class="TavernSkeep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:TavernSkeep"
        mc:Ignorable="d"
        MinHeight="500"
        MinWidth="800"
        Title="TavernSkeep" Height="450" Width="800" Icon="/TavernSkeep;component/images/logo-skip.png" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="fondo.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox Stretch="Fill" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2">
        <Image Source="/TavernSkeep;component/images/OrcWithGrog2.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Grid.RowSpan="2"></Image>
        </Viewbox>
        <Viewbox Stretch="Fill" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2">
            <Image  Source="/TavernSkeep;component/images/Cartel-TavernSkeep.png"/>
        </Viewbox>
        <Image gif:ImageBehavior.AnimatedSource="/TavernSkeep;component/images/SkippySkeep.gif" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="1" Grid.RowSpan="1"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="100,20,100,0" MaxWidth="290px">
            <Viewbox  Stretch="Uniform" MaxHeight="80px">
                <TextBox x:Name="dni" Width="auto" Height="auto" TextAlignment="Left" MinHeight="20px" MinWidth="190px" VerticalAlignment="Center" Margin="0,0,0,20" MaxWidth="350px">
                    <TextBox.Style>
                        <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <Style.Resources>
                                <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                    <VisualBrush.Visual>
                                        <Label Content="DNI" Foreground="LightGray" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Viewbox>
            <Viewbox  Stretch="Uniform" MaxHeight="80px">
                <TextBox x:Name="contraseña1" Width="auto" Height="auto" TextAlignment="Left"  MinHeight="20px"  MinWidth="190px" VerticalAlignment="Center" Margin="0,0,0,20" MaxWidth="350px">
                    <TextBox.Style>
                        <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <Style.Resources>
                                <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                    <VisualBrush.Visual>
                                        <Label Content="Contraseña" Foreground="LightGray" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Viewbox>
            <Viewbox  Stretch="Uniform" MaxWidth="450px">
                <Button Content="start" Width="auto" Height="auto" MinHeight="30px"  MinWidth="150px" Foreground="White" VerticalAlignment="Center" Margin="0,0,0,0" MaxWidth="250px" Click="Button_Click_1" FontFamily="/TavernSkeep;component/font/#Arcade N">
                    <Button.Background>
                        <ImageBrush ImageSource="/TavernSkeep;component/images/boton.png"/>
                    </Button.Background>

                </Button>
            </Viewbox>

        </StackPanel>

    </Grid>
</Window>
